// The option type. Use this when you might have a value, but might
// not.
enum Option<T> {
  Some(T),
  None,
}

/// Return True if this value is `Some`.
external fun (this: Option<T>) is_some<T>(): Bool {
  match this {
    Some(_) => True,
    None => False,
  }
}

/// Return True if this value is `None`.
external fun (this: Option<T>) is_none<T>(): Bool {
  match this {
    Some(_) => False,
    None => True,
  }
}

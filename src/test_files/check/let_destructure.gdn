export fun get_tuple(): (Int, String) {
    (1, "abc")
}

export fun destructure() {
    // good destructure, bad usage
    let (x, y) = get_tuple()
    let _ = x + y

    // bad tuple size
    let (_x, _y, _z) = get_tuple()
    let (_x) = get_tuple()

    // not a tuple
    let () = "foo"
}

